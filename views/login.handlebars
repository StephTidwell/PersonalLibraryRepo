<div class="flex flex-row justify-evenly leading-loose">
  <div class="col-md-6">
    
    <h2 class="text-xl">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input border-2 border-black h-7" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input border-2 border-black h-7" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary m-1 w-24 rounded-full shadow-lg border-black hover:bg-purple-300 border-2 border-solid text-center" type="submit">Log In</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">

    <h2 class="text-xl">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input border-2 border-black h-7" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input border-2 border-black h-7" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input border-2 border-black h-7" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary m-1 w-24 rounded-full shadow-lg border-black hover:bg-purple-300 border-2 border-solid text-center" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
