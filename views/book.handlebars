{{!-- SINGLE BOOK PAGE --}}
<div class="flex flex-col flex-auto text-center">
  {{!-- cover image --}}

  <img src="{{ result.image_url }}" onerror="this.onerror=null;this.src='https://picsum.photos/200';" alt="cover of book" class="h-20 w-20 text-center">

  {{!-- title of book - book.title (etc) --}}
  <h2>{{book.title}}</h2>

  <p>By: {{book.author}}</p>

  {{!-- comments - form with a text input --}}
    {{!-- book.comment.content --}}
  {{!-- if no comment, add button to add comment--}}
  {{!-- if there is a comment, edit and delete buttons - DELETE BUTTON HAS ID DATA-ID - check book.js--}}

  <div class="flex-col col-md-6">

    <form class="form new-review-form">
      <div class="form-group">
        <label for="review-content">Write a Review:</label>
        <textarea class="form-input" id="review-content" name="review-content">{{book.comment.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="add-btn btn-primary w-24 rounded-full shadow-lg border-black border-2 border-solid">Add Comment</button>
        <button type="submit" class="edit-btn btn-primary w-24 rounded-full shadow-lg border-black border-2 border-solid">Edit Comment</button>
        <button type="click" class="del-btn btn-primary w-24 rounded-full shadow-lg border-black border-2 border-solid">Delete Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/mycomments.js"></script>